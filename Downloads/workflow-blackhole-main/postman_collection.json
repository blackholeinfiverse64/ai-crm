        {
          "name": "Get Today's Attendance",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/attendance/today/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "today", "{{userId}}"]
            }
          }
