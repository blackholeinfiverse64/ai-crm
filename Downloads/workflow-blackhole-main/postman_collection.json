{
  "info": {
    "name": "Blackhole Workflow API - Day 1 Enhanced",
    "description": "Complete API collection with Live Attendance, Geofencing, and Alert System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "blackhole-workflow-day1",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5001/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"department\": \"Engineering\",\n  \"role\": \"Employee\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.token) {",
                  "    pm.environment.set('authToken', response.token);",
                  "    pm.environment.set('userId', response.user._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Live Attendance (NEW - Day 1)",
      "item": [
        {
          "name": "Start Live Tracking",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"latitude\": 19.160122,\n  \"longitude\": 72.839720,\n  \"accuracy\": 10,\n  \"deviceId\": \"device-123\",\n  \"deviceFingerprint\": \"fp-abc-xyz\",\n  \"platform\": \"iOS\",\n  \"browser\": \"Safari\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/attendance/live/start/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "live", "start", "{{userId}}"]
            }
          }
        },
        {
          "name": "Update Live Location",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"latitude\": 19.160500,\n  \"longitude\": 72.839900,\n  \"accuracy\": 15,\n  \"altitude\": 20,\n  \"speed\": 0,\n  \"heading\": 0,\n  \"batteryLevel\": 85,\n  \"networkType\": \"wifi\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/attendance/live/update/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "live", "update", "{{userId}}"]
            }
          }
        },
        {
          "name": "Stop Live Tracking",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/attendance/live/stop/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "live", "stop", "{{userId}}"]
            }
          }
        },
        {
          "name": "Get Tracking Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/attendance/live/status/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "live", "status", "{{userId}}"]
            }
          }
        },
        {
          "name": "Get Location History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/attendance/live/history/{{userId}}?limit=100",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "live", "history", "{{userId}}"],
              "query": [
                {
                  "key": "limit",
                  "value": "100"
                },
                {
                  "key": "date",
                  "value": "2025-12-01",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Check Geofence",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"latitude\": 19.160122,\n  \"longitude\": 72.839720,\n  \"userId\": \"{{userId}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/attendance/live/geofence/check",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "live", "geofence", "check"]
            }
          }
        }
      ]
    },
    {
