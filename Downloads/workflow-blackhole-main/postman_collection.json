            }
          }
        },
        {
          "name": "End Day",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"latitude\": 19.160122,\n  \"longitude\": 72.839720,\n  \"address\": \"Office Location\",\n  \"accuracy\": 10\n}",
              "options": {
                "raw": {
                  "language": "json"
