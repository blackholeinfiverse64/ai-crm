        {
          "name": "Get User Attendance",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/attendance/user/{{userId}}?startDate=2025-12-01&endDate=2025-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["attendance", "user", "{{userId}}"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-12-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "4. Alerts (Enhanced - Day 1)",
      "item": [
        {
          "name": "Get All Alerts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/alerts?limit=50&offset=0&resolved=false",
              "host": ["{{baseUrl}}"],
              "path": ["alerts"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "offset",
                  "value": "0"
                },
                {
                  "key": "resolved",
                  "value": "false"
                },
                {
                  "key": "severity",
                  "value": "High",
                  "disabled": true
                },
                {
                  "key": "type",
                  "value": "Location",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Location Alerts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/alerts/location/{{userId}}?limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["alerts", "location", "{{userId}}"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "resolved",
                  "value": "false",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Create Alert (Admin)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employeeId\": \"{{userId}}\",\n  \"type\": \"Location\",\n  \"severity\": \"High\",\n  \"title\": \"Test Alert\",\n  \"description\": \"This is a test alert\",\n  \"metadata\": {\n    \"reason\": \"Manual trigger\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/alerts/create",
              "host": ["{{baseUrl}}"],
              "path": ["alerts", "create"]
            }
          }
        },
        {
          "name": "Acknowledge Alert",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"Issue resolved, user was at authorized location\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/alerts/:alertId/acknowledge",
              "host": ["{{baseUrl}}"],
              "path": ["alerts", ":alertId", "acknowledge"],
              "variable": [
                {
                  "key": "alertId",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Trigger Alert (Admin)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employeeId\": \"{{userId}}\",\n  \"alertType\": \"geofence_exit\",\n  \"data\": {\n    \"location\": {\n      \"latitude\": 19.165000,\n      \"longitude\": 72.845000\n    },\n    \"distance\": 800\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/alerts/trigger",
              "host": ["{{baseUrl}}"],
              "path": ["alerts", "trigger"]
            }
          }
        },
        {
          "name": "Get Alert Statistics (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/alerts/admin/stats?startDate=2025-12-01&endDate=2025-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["alerts", "admin", "stats"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-12-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31"
                }
              ]
            }
          }
        }
      ]
    },
